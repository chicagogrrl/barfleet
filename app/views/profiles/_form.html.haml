-# frozen_string_literal: true
= simple_form_for(@profile) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.association :user
    = f.input :first_name
    = f.input :last_name
    = f.input :address1
    = f.input :address2
    = f.input :city
    = f.input :state
    = f.input :zip
    = f.input :email
    = f.input :phone
    = f.input :active

  .form-actions
    = f.button :submit
